<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Estudiante.Nav_Fragments_Estudiante.FragmentEvaluacionesEstudiante">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÃ­tulo centrado -->
        <TextView
            android:id="@+id/tvTituloEvaluaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evaluaciones"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!--Lista de secciones-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSecciones"
            android:layout_margin="5dp"
            tools:listitem="@layout/item_evaluacion_e"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</FrameLayout>