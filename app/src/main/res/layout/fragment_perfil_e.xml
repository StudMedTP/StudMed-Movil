<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Foto de perfil (puedes luego cargarla dinámicamente) -->
        <ImageView
            android:id="@+id/ivFotoPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_estudiante_seleccion"
            android:layout_marginBottom="24dp"
            android:contentDescription="Foto de perfil"/>

        <!-- Nombre completo -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: Juan Pérez Flores"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Código del estudiante -->
        <TextView
            android:id="@+id/tvCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código: 202012345"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Correo institucional -->
        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo: juan.perez@upc.edu.pe"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Especialidad -->
        <TextView
            android:id="@+id/tvCarrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrera: Medicina Humana"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <!-- Botón para editar perfil -->
        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:backgroundTint="#0077CC"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
