<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título centrado arriba -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Control de asistencia"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Cuadro 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_asistencia_item"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <!-- Hospital -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hospital_nombre"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <!-- Fecha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fecha_ejemplo_1"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <!-- Hora -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hora_ejemplo_1"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Estado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estado_pendiente"
                android:textSize="16sp"
                android:textColor="#CC7A00"
                android:layout_marginBottom="16dp"/>

            <!-- Botón -->
            <Button
                android:id="@+id/btnFirmar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_firmar_asistencia"
                android:backgroundTint="#00AEEF"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Cuadro 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_asistencia_item"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Hospital -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hospital_nombre"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <!-- Fecha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fecha_ejemplo_2"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <!-- Hora -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hora_ejemplo_2"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Estado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estado_pendiente"
                android:textSize="16sp"
                android:textColor="#CC7A00"
                android:layout_marginBottom="16dp"/>

            <!-- Botón -->
            <Button
                android:id="@+id/btnFirmar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_firmar_asistencia"
                android:backgroundTint="#00AEEF"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
