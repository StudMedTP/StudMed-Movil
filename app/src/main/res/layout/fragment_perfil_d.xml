<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloPerfilDocente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Foto de perfil del docente -->
        <ImageView
            android:id="@+id/ivFotoPerfilDocente"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_docente_seleccion"
            android:layout_marginBottom="24dp"
            android:contentDescription="Foto de perfil docente"/>

        <!-- Nombre completo -->
        <TextView
            android:id="@+id/tvNombreDocente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: Dra. Mariana Valdivia"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- DNI o código -->
        <TextView
            android:id="@+id/tvDniDocente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DNI: 12345678"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Correo institucional -->
        <TextView
            android:id="@+id/tvCorreoDocente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo: mariana.valdivia@upc.edu.pe"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Facultad o Escuela -->
        <TextView
            android:id="@+id/tvFacultadDocente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facultad: Ciencias de la Salud"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <!-- Botón para editar perfil -->
        <Button
            android:id="@+id/btnEditarPerfilDocente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:backgroundTint="#0077CC"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
