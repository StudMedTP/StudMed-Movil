<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:contentPadding="16dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#87CEEB">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Contenedor para los textos -->
        <LinearLayout
            android:id="@+id/layout_textos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="100dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/item_nombre_evaluacion_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_nombre_evaluacion_d"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/item_seccion_evaluacion_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_seccion_evaluacion_d"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/item_descripcion_evaluacion_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_descripcion_evaluacion_d"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- BotÃ³n Revisar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_revisar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revisar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:backgroundTint="#6A5ACD"
            app:cornerRadius="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>


